<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body>
  <div class="header">
    <% if(user) { %>
      <h1 class="title"><%= title %></h1>
      <p>Hey <%= user.name %></p>
      <img alt="avatar" src="<%= user.avatar %>" referrerpolicy="no-referrer">
    <% } else { %>
      <h1 class="title"><%= title %></h1>
    <% } %> 
  </div>
  
  <div class="row">
    <div class="col-3 menu">
      <ul>
        <a href="/"><li class="first">Home</li></a>
        <% if (user) { %>
          <a href="/users/dashboard"><li class="second">Dashboard</li></a>
          <a href="/venues/new"><li class="third">Add Venue</li></a>
          <a href="/logout"><li class="fourth">Log Out</li></a>
        <% } else { %>
          <a href="/auth/google"><li>Log in or Join the team</li></a>
        <% } %>
      </ul>
    </div>
    
    <div class="col-6">
      <% if(venues.length) { %>
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Address</th>
              <th>Cuisine</th>
            </tr>
          </thead>
          <tbody>
            <% venues.forEach(function(v) { %>
              <tr>
                <td><%= v.name %></td> 
                <td><%= v.address %></td>
                <td><%= v.foodType %></td>
                <td><a class="detailsbutton" href="/venues/<%= v._id %>">Reviews</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>
  </div>
  
  <div class="footer">
    <p>Contact us: inclusiveDine@gmail.com</p>
  </div>
</body>
</html>
