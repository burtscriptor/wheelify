<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
  <div class="header">
    <h1 class="title"><%= title %></h1>
    <p>Welcome <%= user.name %></p>
    <img alt="avatar" src="<%= user.avatar %>" referrerpolicy="no-referrer">
  </div>
  
  <div class="row">
    <div class="col-3 menu">
      <ul>
        <a href="/"><li class="first">Home</li></a>
        <% if (user) { %>
          <a href="/venues"><li class="second">Venues and Reviews</li></a>
          <a href="/venues/new"><li class="third">Add Venue</li></a>
          <a href="/logout"><li class="fourth">Log Out</li></a>
          <% } else { %>
          <a href="/auth/google"><li class="first">Log in or Join the team</li></a>
          <a href="/venues"><li class="second">Venues and Reviews</li></a>
            <% } %>
      </ul>
    </div>
  
    <div class="col-6">
      <h2>Your Reviews</h2>
      <% if (reviewShow.length) { %>
            <% reviewShow.forEach(function(r) { %>
              <div class="showReviwForm">  
              
                <h5><%= r.venueName %></h5>
                <p>Wheel chair adopted: <%= r.wheelChairAdopted %></p>
                <p>Wheel chair friendly: <%= r.wheelChairFriendly %></p>
                <p>Desisgnated disable parking: <%= r.designatedDisableParking %></p>
                <p>Easy parking nearby: <%= r.easyParkingNearby %></p>
                <p>Hills on approach: <%= r.hillsOnApproach %></p>
                <p>Uneven ground on approach: <%= r.unevenPavementOnApproach %></p>
                <p>Vegan friendly options: <%= r.veganFriendly %></p>
                <p>Gluten free options: <%= r.glutenFree %></p>
                <p>Comments: <%= r.comment %></p>
                <p>
                  <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete</button>
                  </form>    
                
                  <a href="/users/<%= r._id %>/edit">
                    <button type="submit">Edit</button>
                  </a>
                
              </div>
            <% }) %>
          
      <% }; %>
    </div>
  </div>
</body>
</html>
